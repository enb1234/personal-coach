<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/button_manage_resolutions"
            android:text="@string/main_manage_resolutions_button"
            android:onClick="onManageResolutionsClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_buttons"
        android:layout_alignLeft="@id/layout_buttons"
        android:layout_alignStart="@id/layout_buttons"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/text_view_score_label"
            android:text="@string/main_score_label"
            style="@style/AppTheme.Main.Attribute.TextView.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/text_view_score_value"
            android:text="0"
            style="@style/AppTheme.Main.Attribute.TextView.Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_view_score_label"
            android:layout_toEndOf="@id/text_view_score_label" />
    </RelativeLayout>
</RelativeLayout>
